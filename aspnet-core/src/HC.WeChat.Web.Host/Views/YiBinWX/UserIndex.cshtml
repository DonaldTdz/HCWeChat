@model  HC.WeChat.WeChatUsers.Dtos.WeChatUserListDto
@{
    ViewData["Title"] = "个人中心";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" name="viewport" />
    <title>个人中心</title>
    <link rel="stylesheet" href="static/css/base.css" />
    <link rel="stylesheet" href="static/css/commons.css" />
    <link rel="stylesheet" href="static/css/personal.css" />
</head>
<body class="bg_gary">
    <!--页面整体-->
    <div class="all_width">
        <div class="header bg_green tc">
            个人中心
        </div>
        <!--个人中心头部-->
        <div class="personal_head">
            <!--头像-->
            <img src="static/img/index/timg-4.jpeg" class="personal_header" />
            <p class="personal_id"><span>@Model.NickName</span></p>
        </div>
        <!--个人信息功能链接-->
        <ul class="personal_link all_width">
            <li>
                <label class="fl main_green">
                    姓名
                </label>
                <label class="fl  ml20">@Model.UserName</label>
            </li>
            <li>
                <label class="fl main_green">
                    用户类型
                </label>
                <label class="fl  ml20">@Model.UserType.ToString()</label>
            </li>
        </ul>
    </div>
</body>
</html>


